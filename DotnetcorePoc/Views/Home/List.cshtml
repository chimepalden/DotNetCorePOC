@model IEnumerable<Member>

@{ 
    ViewBag.Title = "List";
}

<div class="container">
    <div class="card-header bg-secondary mt-3">Members</div>
    <div class="card-deck">
        @foreach (var member in Model)
        {
            var photoPath = "~/Images/" + (member.PhotoPath ?? "noimage.jpg");
            <div class="card m-3" style="min-width:10rem; max-width: 30%;">
                <div class="card-header bg-light">
                    @member.Name
                </div>
                <div class="card-body">
                    <img class="card-img-top" src="@photoPath" asp-append-version="true"/>
                </div>
                <div class="card-footer">
                <a asp-controller="home" asp-action="details" asp-route-id="@member.Id"
                       class="btn btn-info">View</a>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    <script></script>
}